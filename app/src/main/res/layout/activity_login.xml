<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_below="@+id/logo"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_chat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textvalue"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/ETemail_log"
        android:hint="EMAIL"
        android:padding="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edittext_shape"
        />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/ETpass_login"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETemail_log"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textvalue"
        android:hint="Password"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edittext_shape"
        />

    <TextView
        android:id="@+id/signinbtn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETpass_login"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_sign_btn"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="39dp"
            android:text="I am new User.. "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/btnSignup_login"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="41dp"
            android:text="Sign up "
            android:textColor="@color/primary_color"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>